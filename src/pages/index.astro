---
import Section from "~/components/common/Section.astro";
import Input from "~/components/common/Input.astro";
import Layout from "~/layouts/Layout.astro";
import FeaturesCard from "~/components/common/FeaturesCard.astro";

---

<Layout title="Yourbus">
  <div class="fixed inset-0 -z-10 h-full w-full bg-white [background:radial-gradient(125%_125%_at_50%_10%,#fff_40%,#2563eb_100%)]"/>
  <Section class="grid grid-cols-1 md:grid-cols-[2fr_1fr]" padingVertical="medium">

    <div class="grid place-content-center">
      <h1 class="text-4xl md:text-7xl text-center font-bold md:max-w-[25ch] md:mx-auto">
        <!-- La app que te ahorra tiempo y te conecta -->
        <!-- La aplicacion que optimiza tu tiempo y te conecta con el mundo -->
        <!-- Contectate y ahorra tiempo, simplifica tu vida -->
        <!-- Viaja facil, viaja lejos, tu ruta en un click -->
        <!-- Tu viaje seguro y rapido, conecta ciudades al instante -->
        Tu viaje <span class="text-gradient">seguro y rapido</span>, a un click de conectar con el mundo
      </h1>
      <p class="md:max-w-[90ch] md:mx-auto text-slate-600 text-center mt-4 text-sm md:text-lg">
        <!-- Descubre una nueva forma de viajar con nuestra aplicaci칩n de buses,  dise침ada para ofrecerte la m치xima seguridad y un ahorro de tiempo inigualable. -->
