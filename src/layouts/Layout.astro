---
import Head from "~/components/common/Head.astro";
import Header from "~/components/common/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head title={title} />
  <body>
    <Header />
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    --accent-gradient: linear-gradient(90deg, rgba(29,78,216,1) 0%, rgba(192,38,211,1) 32%, rgba(34,211,238,1) 77%, rgba(29,78,216,1) 100%);
  }

  body {
    font-family: "Onest", system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif,sans-serif;
    overflow-x: scroll;
  }

  h1 {

    @apply text-gray-800
  }
</style>
